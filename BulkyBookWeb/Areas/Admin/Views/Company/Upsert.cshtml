@model BulkyBook.Models.Company



<h1 class="center">Company</h1>


<hr />
<div class="row center mt-4">
    @*<h4 class="center">Upset the Product</h4>*@
    <div class="col-md-4 row pb-2">
        @*<h4 class="center">@(Model.Product.Id != 0 ? "Edit" : "Create") the Product</h4>*@
        <form method="post" enctype="multipart/form-data" asp-action="Upsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            
            <div>
                <h4 class="center">@(Model.Id != null ? "Update" : "Create") Company</h4>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StreetAdress" class="control-label"></label>
                <input asp-for="StreetAdress" class="form-control" />
                <span asp-validation-for="StreetAdress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group center">
                @if(Model.Id==null){

                    @*<input type="submit" value="Create" class="btn btn-primary btn-size" />*@
                <input type="submit" class="btn btn-primary btn-size" />
                }
                else{
                    <input type="submit" value="Update" class="btn btn-primary btn-size" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    }

